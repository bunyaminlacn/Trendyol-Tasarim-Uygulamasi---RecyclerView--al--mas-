<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="20dp"


    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewResimUrun"
                android:layout_width="146dp"
                android:layout_height="157dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/defs" />

            <TextView
                android:id="@+id/textViewBaslik"
                android:layout_width="171dp"
                android:layout_height="37dp"
                android:text="Samsung Galaxy S23 256 GB
YeÅŸil Cep Telefonu(Samsung..."
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <ImageView
                android:id="@+id/imageViewYildiz"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_marginStart="4dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewAdet"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewBaslik"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/textViewAdet"
                android:layout_width="37dp"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                android:text="(340)"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/imageViewCamera"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewYildiz"
                app:layout_constraintTop_toBottomOf="@+id/textViewBaslik" />

            <ImageView
                android:id="@+id/imageViewCamera"
                android:layout_width="18dp"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textViewAdet"
                app:layout_constraintTop_toBottomOf="@+id/textViewBaslik"
                app:srcCompat="@drawable/camera_icon" />

            <TextView
                android:id="@+id/textViewFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="28940 TL"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/imageViewYildiz"
                app:layout_constraintTop_toBottomOf="@+id/imageViewYildiz" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="157dp"
                android:layout_height="39dp"
                app:layout_constraintStart_toStartOf="@+id/imageViewResimUrun"
                app:layout_constraintTop_toBottomOf="@+id/imageViewResimUrun"
                app:srcCompat="@drawable/bu" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="39dp"
                android:layout_height="34dp"
                android:layout_marginStart="134dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/imageViewResimUrun"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/olo" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="182dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewFiyat"
                app:srcCompat="@drawable/dcf" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
